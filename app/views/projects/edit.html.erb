<%= form_for @project, url: {controller: "projects", action: "update"} do |f| %>
    <div class="table-responsive">
      <div class="row margin0">
              <span class="col-lg-12 col-md-12 col-xs-12 marginTB10">
                <%= f.text_field :name,
                                 :class => 'form-control',
                                 :name => "project[name]",
                                 :required => "true",
                                 :placeholder => "Name"
                %>
              </span>
      </div>
      <div class="row margin0">
              <span class="col-lg-12 col-md-12 col-xs-12 marginTB10">
                <%= f.text_field :description,
                                 :class => 'form-control',
                                 :name => "project[description]",
                                 :required => "true",
                                 :placeholder => "Description"
                %>
              </span>
      </div>
    </div>
<%- end %>